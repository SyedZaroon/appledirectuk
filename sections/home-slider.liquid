{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>


<div style="background:#fff; padding:30px;">
<div class="home-slider-container">
  <div class="swiper home-slider-swiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <img src="{{ 'home-slider-1.png' | asset_url }}" alt="Slide 1" width="auto" height="auto">
      </div>
      <div class="swiper-slide">
        <img src="{{ 'home-slider-2.png' | asset_url }}" alt="Slide 2" width="auto" height="auto">
      </div>
      <div class="swiper-slide">
        <img src="{{ 'home-slider-1.png' | asset_url }}" alt="Slide 3" width="auto" height="auto">
      </div>
    </div>

    <!-- Navigation and Pagination -->
    <div class="swiper-button-next home-slider-next"></div>
    <div class="swiper-button-prev home-slider-prev"></div>
    <div class="swiper-pagination home-slider-pagination"></div>
  </div>
</div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const initHomeSwiper = () => {
    if (typeof Swiper === "undefined") {
      return setTimeout(initHomeSwiper, 100);
    }

    new Swiper(".home-slider-swiper", {
      slidesPerView: 1,
      spaceBetween: 30,
      loop: true,
      pagination: {
        el: ".home-slider-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".home-slider-next",
        prevEl: ".home-slider-prev",
      },
      observer: true,
      observeParents: true,
      watchOverflow: true,
    });
  };

  initHomeSwiper();
});
</script>

{% stylesheet %}
.home-slider-container {
  width: 100%;
  height: auto;
  background: #000;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  color: #fff;
  overflow: hidden;
  position: relative;
}

.home-slider-swiper {
  width: 100%;
  height: 500px;
}

.home-slider-swiper .swiper-slide {
  text-align: center;
  font-size: 18px;
  background: #444;
  display: flex;
  justify-content: center;
  align-items: center;
}

.home-slider-swiper .swiper-slide img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.home-slider-swiper .swiper-button-next,
.home-slider-swiper .swiper-button-prev {
  color: #fff;
}

.home-slider-swiper .swiper-pagination-bullet {
  background: #fff;
}

.home-slider-swiper .swiper-pagination-bullet-active {
  background: #f00; /* red active bullet */
}
{% endstylesheet %}

{% schema %}
{
  "name": "Home Slider",
  "presets": [
    { "name": "Home Slider" }
  ]
}
{% endschema %}
