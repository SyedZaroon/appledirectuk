<style>
  .video-banner {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
  }

  .video-banner video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .video-banner img.preview-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .video-banner .overlay {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 20px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
    max-width: 700px;
  }

  .video-banner .overlay h2 {
    font-size: 48px;
    margin-bottom: 15px;
  }

  .video-banner .overlay p {
    font-size: 18px;
    margin-bottom: 20px;
  }

  .video-banner .overlay a.button {
    display: inline-block;
    background: #ffffff;
    color: #000;
    padding: 12px 30px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .video-banner .overlay a.button:hover {
    background: #f5f5f5;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .video-banner {
      height: 70vh;
    }

    .video-banner .overlay h2 {
      font-size: 28px;
    }

    .video-banner .overlay p {
      font-size: 16px;
    }
  }
</style>

<section class="video-banner">
  {% if section.settings.preview_image != blank %}
    <img
      class="preview-image"
      src="{{ section.settings.preview_image | image_url: 'master' }}"
      alt="Video Preview"
      loading="lazy"
      width="auto"
      height="auto"
    >
  {% endif %}

  {% if section.settings.video_url != blank %}
    <video
      autoplay
      loop
      muted
      playsinline
      poster="{{ section.settings.preview_image | image_url: 'master' }}"
    >
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% endif %}

  <div class="overlay">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Video Background Banner",
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "video",
      "id": "video_url",
      "label": "Video File or URL",
    },
    {
      "type": "image_picker",
      "id": "preview_image",
      "label": "Preview Image (Poster)"
    },
    {
      "type": "header",
      "content": "Text Overlay"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Experience the Future"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A powerful background video to showcase your brand."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Video Background Banner",
      "category": "Media"
    }
  ]
}
{% endschema %}
