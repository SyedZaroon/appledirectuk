<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="  section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}" style="padding-block-start: {{ section.settings.padding-block-start }}px; padding-block-end: {{ section.settings.padding-block-end }}px;">
    <div> {% content_for 'blocks' %} </div>

    <!-- Included in the Box -->
    <div></div>
</div>

{% schema %}
{
  "name": "Tech Specs",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text",
    },
    {
      
      "type": "include-in-the-box",
    }
  ],
  "presets": [
    {
      "name": "Tech Specs",
      "category": "Products",
      "blocks": [
        {
            "type": "text",
        },
        {
            "type": "include-in-the-box",
        }
      ]
    }
  ]
}
{% endschema %}
