{% assign include_in_the_box = product.metafields.custom.included_in_the_box.value %}
{% assign product_specification = product.metafields.custom.product_specification.value %}

{% if include_in_the_box != blank or product_specification != blank %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="  section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}" style="padding-block-start: {{ section.settings.padding-block-start }}px; padding-block-end: {{ section.settings.padding-block-end }}px;">



      <div>
        {% content_for 'block', type: 'text', id: 'text' %}
      </div>

    <div class="tech-specs-container">
      <div>
        {% content_for 'block', type: '_product-specification', id: 'product-specification' %}
      </div>

      <div>
        {% content_for 'block', type: '_include-in-the-box', id: 'include-in-the-box' %}
      </div>

    </div>



</div> 

<style>
  .tech-specs-container{
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
  }

  @media screen and (max-width: 965px) {
    .tech-specs-container{
      grid-template-columns: repeat(1, 1fr);
      gap: 2rem;
    }
  }
</style>
{% endif %}


{% schema %}
{
  "name": "Tech Specs",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text",
    },
    {
      
      "type": "_include-in-the-box",
    },
    {
      "type": "_product-specification",
    }
  ],
  "presets": [
    {
      "name": "Tech Specs",
      "category": "Products", 
    }
  ]
}
{% endschema %}
